<%- include('./partials/header') %>

<% if (success.length > 0) { %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-4 bg-blue-600 text-white rounded-lg shadow-lg transition-transform transform-gpu scale-100 opacity-100 duration-500 ease-in-out" id="successMessage">
        <span class="font-semibold"><%= success %></span>
    </div>
<% } %>

<div class="min-h-screen bg-gray-100 flex flex-col">
    <div class="container mx-auto px-6 py-12 flex flex-col md:flex-row gap-6">
        <!-- Sidebar -->
        <aside class="w-full md:w-1/4 flex flex-col bg-white shadow-lg rounded-lg p-6 mb-6 md:mb-0">
            <h2 class="text-xl font-semibold mb-4">Admin Panel</h2>
            <a class="block mb-4 text-blue-500 hover:text-blue-700 transition-colors duration-300" href="#">All Products</a>
            <a class="block text-blue-500 hover:text-blue-700 transition-colors duration-300" href="#">Create New Product</a>
        </aside>

        <!-- Main Content -->
        <main class="w-full md:w-3/4 bg-white p-8 shadow-lg rounded-lg">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4 text-gray-700">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium text-gray-600">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input name="name" type="text" placeholder="Product Name" class="border p-3 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                        <input name="price" type="text" placeholder="Product Price" class="border p-3 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                        <input name="discount" type="text" placeholder="Discount Price" class="border p-3 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                    </div>
                </div>

                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4 text-gray-700">Panel Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input name="bgcolor" type="text" placeholder="Background Color" class="border p-3 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                        <input name="panelcolor" type="text" placeholder="Panel Color" class="border p-3 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                        <input name="textcolor" type="text" placeholder="Text Color" class="border p-3 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                    </div>
                </div>

                <button class="px-6 py-3 bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 transition-colors duration-300" type="submit">
                    Create New Product
                </button>
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>

<script>
    // Optional: Hide the success message after a few seconds
    document.addEventListener('DOMContentLoaded', function() {
        const successMessage = document.getElementById('successMessage');
        if (successMessage) {
            setTimeout(() => {
                successMessage.classList.add('opacity-0');
                setTimeout(() => successMessage.classList.add('hidden'), 500);
            }, 3000);
        }
    });
</script>
