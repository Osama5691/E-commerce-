<%- include('./partials/header') %>

<% if(success.length > 0) { %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-4 rounded-md bg-blue-500 shadow-lg transition-transform duration-300 ease-in-out">
        <span class="text-white font-semibold">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex items-start px-10 py-10 bg-gray-100">
    <!-- Sidebar -->
    <div class="w-1/4 flex flex-col items-start bg-white shadow-lg rounded-lg p-6 space-y-6 min-h-[100vh]">
        <div class="flex flex-col space-y-4">
            <div class="flex items-center gap-2">
                <h3 class="text-lg font-semibold text-gray-700">Sort By</h3>
                <form action="/shop">
                    <select class="border border-gray-300 px-4 py-2 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" name="sortby">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                </form>
            </div>
            <div class="flex flex-col space-y-2">
                <a class="block text-blue-600 hover:text-blue-800 transition-colors" href="">New Collection</a>
                <a class="block text-blue-600 hover:text-blue-800 transition-colors" href="">All Products</a>
                <a class="block text-blue-600 hover:text-blue-800 transition-colors" href="">Discounted Products</a>
            </div>
            <div class="flex flex-col space-y-2">
                <a class="block text-gray-700 font-semibold">Filter by :</a>
                <a class="block text-blue-600 hover:text-blue-800 transition-colors" href="">Availability</a>
                <a class="block text-blue-600 hover:text-blue-800 transition-colors" href="">Discount</a>
            </div>
        </div>
    </div>

    <!-- Product Grid -->
    <div class="w-3/4 flex flex-col gap-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6">
            <% products.forEach(function(product) { %>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden transform transition-transform hover:scale-105 hover:shadow-xl duration-300">
                    <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>] transition-transform duration-300 ease-in-out">
                        <img class="h-48 object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    </div>
                    <div class="p-4 flex justify-between items-center bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                        <div>
                            <h3 class="text-lg font-semibold"><%= product.name %></h3>
                            <h4 class="text-xl font-bold">â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-10 h-10 flex items-center justify-center rounded-full bg-white shadow-md hover:bg-gray-200 transition-colors duration-300" href="/addtocart/<%= product._id %>">
                            <i class="ri-add-line text-gray-600"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
